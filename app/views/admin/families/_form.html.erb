<%= form_for [:admin,@family] do |f| %>
<% if @family.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<a href="#" class="close" data-dismiss="alert">&times;</a>
	<h2><%= pluralize(@family.errors.count, "error") %> prohibited this request from being saved:</h2>
	<ul>
		<% @family.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<%= f.label :family_category_id %>
	<%= f.select :family_category_id,options_from_collection_for_select(FamilyCategory.where(:enable=>true).all, 'id', 'title',@family.family_category_id),{},{:class=>"form-control"} %>
</div>
<div class="form-group">
	<%= f.label :member %>
	<%= f.number_field :member,:class=>"form-control",:required=>"required" %>
</div>
<div class="form-group">
	<%= f.label :enable %>
	<%= f.check_box :enable %>
</div>
<div class="form-group actions">
	<%= f.submit :class=>"btn btn-primary" %>
</div>
<% end %>
