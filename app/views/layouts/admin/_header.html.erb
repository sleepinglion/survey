<header>
  <h1 class="col-12 col-sm-4 col-md-3 col-lg-2"><%= link_to admin_path, :class => "brand" do %>
      <span class="hidden-phone"><%= t(:service_name) %></span>
    <% end %></h1>
  <div id="top_menu">
    <ul class="nav">
      <li class="dropdown">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <% if current_admin.admin_picture.present? %>
            <%= image_tag current_admin.admin_picture.picture.small_thumb.url %>
          <% end %>&nbsp;
          <%= current_admin.name %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to edit_admin_registration_path do %>
              <i class="glyphicon glyphicon-user"></i> <%= t(:admin_profile) %>
            <% end %></li>
          <li><%= link_to destroy_admin_session_path do %><i class="glyphicon glyphicon-off"></i> <%= t(:logout) %>
            <% end %></li>
        </ul>
      </li>
      <li class="dropdown">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <% if I18n.locale.to_s == 'ko' %>
            <%= t(:korean) %>
          <% end %>
          <% if I18n.locale.to_s == 'zh-CN' %>
            <%= t(:chineses) %>
          <% end %>
          <% if I18n.locale.to_s == 'en' %>
            <%= t(:english) %>
          <% end %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <% unless I18n.locale == 'ko' %>
            <li><%= link_to url_for(:locale => 'ko') do %><%= t(:korean) %>
              <% end %></li>
          <% end %>
          <% unless I18n.locale == 'zh-CN' %>
            <li><%= link_to url_for(:locale => 'zh-CN') do %><%= t(:chineses) %>
              <% end %></li>
          <% end %>
          <% unless I18n.locale == 'en' %>
            <li><%= link_to url_for(:locale => 'en') do %><%= t(:english) %>
              <% end %></li>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>
  <nav class="col-12 col-lg-7">
    <%= render :partial => 'layouts/admin/menu' %>
  </nav>
</header>

