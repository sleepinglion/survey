<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
	  <div class="form-group">
	  	<%= f.label t(:label_login_id) %>
	    <div class="controls">
      <p class="form-control-static"><%=@user.login_id %></p>
		</div>
	  </div>
	  <div class="form-group">
	  	<%= f.label t(:label_password_name) %>
	    <div class="controls">
      <p class="form-control-static"><%=@user.name %></p>
		</div>
	  </div>
    <div class="form-group">
	  	<%= f.label t(:label_sex) %>
	    <div class="controls">
      <p class="form-control-static"><%=sexToString(@user.sex) %></p>
		</div>
	  </div>
	  <div class="form-group">
	  	<%= f.label :password %>
	    <div class="controls">
	  	<%= f.password_field :password,:class=>"form-control", :autocomplete => "off" %>
	  	<span class="help-block">(비밀번호 변경시만 입력)</span>
		</div>
	  </div>
	  <div class="form-group">
	  	<%= f.label :password_confirmation %>
	    <div class="controls">
	  	<%= f.password_field :password_confirmation,:class=>"form-control" %>
	  	<span class="help-block">(비밀번호 변경시만 입력)</span>
		</div>
	  </div>
	  <div class="form-group">
	  	<%= f.label t(:label_current_password) %>
	    <div class="controls">
	  	<%= f.password_field :current_password,:class=>"form-control", :required=>"required" %>
	  	<span class="help-block">(변경시  입력)</span>
		</div>
	  </div>
	  <div class="form-group">
		<%= f.label :photo %>
	    <div class="controls">
			<% if resource.photo? %>
				<%= image_tag(resource.photo.small_thumb) %>
				<br />
			<% end %>
			<%= f.file_field :photo %>
			<%= f.hidden_field :photo_cache %>
		</div>
	  </div>
	 <div class="form-actions">
	 		<%= f.submit :class=>"btn btn-lg btn-primary" %>
		</div>
<% end %>
