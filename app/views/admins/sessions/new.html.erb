<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:class=>"form-horizontal" ) do |f| %>
<% if flash.count > 0 %>
<div id="sl_message" class="alert alert-danger col-xs-10 col-xs-offset-1" role="alert" >
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <% flash.each do |name, msg| %>
          <%= content_tag :p, msg, id: "flash_#{name}" %>
       <% end %>
   </div>
<% end %>
<fieldset style="clear:both">
	<div class="form-group col-xs-12">
		<label for="admin_login_id" class="col-sm-3"><%=t(:login_id) %></label>
		<div class="col-sm-9">
			<%= f.text_field :login_id, :autofocus => true, :class=>"form-control",:required=>"required" %>
		</div>
	</div>
	<div class="form-group col-xs-12">
		<label for="admin_password" class="col-sm-3"><%=t(:password) %></label>
		<div class="col-sm-9">
			<%= f.password_field :password,:class=>"form-control",:required=>"required" %>
		</div>
	</div>
	<div class="form-group col-xs-12">
		<div class="checkbox col-xs-8">
			<label>
				<input type="checkbox" name="remember_me" id="remember_me">
				<%= t(:login_remember) %> </label>
		</div>
		<div class="col-xs-4" style="text-align:right">
			<button type="submit" class="btn btn-primary">
				<%= t(:login) %>
			</button>
		</div>
	</div>
</fieldset>
<% end %>
